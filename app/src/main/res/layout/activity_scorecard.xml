<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landscape"
    tools:context=".ScorecardActivity">


    <Button
        android:id="@+id/undoButton"
        style="@style/stroke_button_style"
        android:layout_marginStart="8dp"
        android:onClick="UndoStroke"
        android:text="@string/undo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/penaltyButton" />

    <Button
        android:id="@+id/penaltyButton"
        style="@style/stroke_button_style"
        android:layout_marginStart="8dp"
        android:onClick="AddPenalty"
        android:text="@string/penalty_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/strokeButton"
        style="@style/stroke_button_style"
        android:onClick="AddScore"
        android:text="@string/stroke_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/puttButton"
        style="@style/stroke_button_style"
        android:onClick="AddPutt"
        android:text="@string/putt_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/strokeButton" />

    <Button
        android:id="@+id/prevButton"
        style="@style/nav_button_style"
        android:onClick="PrevHole"
        android:text="@string/previous"
        app:layout_constraintStart_toStartOf="@+id/tl1"
        app:layout_constraintTop_toBottomOf="@+id/tl1" />

    <Button
        android:id="@+id/nextButton"
        style="@style/nav_button_style"
        android:onClick="NextHole"
        android:text="@string/next"
        app:layout_constraintEnd_toEndOf="@+id/tl1"
        app:layout_constraintTop_toBottomOf="@+id/tl1" />

    <TableLayout
        android:id="@+id/tl1"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ExtraText">

        <TableRow
            android:id="@+id/r1"
            android:layout_width="368dp"
            android:layout_height="48dp"
            android:gravity="top">

            <TextView
                android:id="@+id/tv1"
                style="@style/HoleText"
                android:text="@string/hole_one" />

            <TextView
                android:id="@+id/tv2"
                style="@style/HoleText"
                android:text="@string/hole_two" />

            <TextView
                android:id="@+id/tv3"
                style="@style/HoleText"
                android:text="@string/hole_three" />

            <TextView
                android:id="@+id/tv4"
                style="@style/HoleText"
                android:text="@string/hole_four" />

            <TextView
                android:id="@+id/tv5"
                style="@style/HoleText"
                android:text="@string/hole_five" />

            <TextView
                android:id="@+id/tv6"
                style="@style/HoleText"
                android:text="@string/hole_six" />

            <TextView
                android:id="@+id/tv7"
                style="@style/HoleText"
                android:text="@string/hole_seven" />

            <TextView
                android:id="@+id/tv8"
                style="@style/HoleText"
                android:text="@string/hole_eight" />

            <TextView
                android:id="@+id/tv9"
                style="@style/HoleText"
                android:text="@string/hole_nine" />

            <TextView
                android:id="@+id/tv10"
                android:layout_width="45dp"
                android:background="@drawable/back"
                android:padding="3dip"
                android:text="@string/hole_out"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:textSize="12dp" />

        </TableRow>


        <TableRow
            android:id="@+id/r2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="top">

            <TextView
                android:id="@+id/tv11"
                style="@style/scorestyle"/>

            <TextView
                android:id="@+id/tv12"
                style="@style/scorestyle"/>

            <TextView
                android:id="@+id/tv13"
                style="@style/scorestyle"/>

            <TextView
                android:id="@+id/tv14"
                style="@style/scorestyle"/>

            <TextView
                android:id="@+id/tv15"
                style="@style/scorestyle"/>

            <TextView
                android:id="@+id/tv16"
                style="@style/scorestyle"/>

            <TextView
                android:id="@+id/tv17"
                style="@style/scorestyle"/>

            <TextView
                android:id="@+id/tv18"
                style="@style/scorestyle"/>

            <TextView
                android:id="@+id/tv19"
                style="@style/scorestyle"/>

            <TextView
                android:id="@+id/tv20"
                style="@style/scorestyle"
                android:text="@string/zero"/>

        </TableRow>

        <TableRow
            android:id="@+id/r3"
            android:layout_width="368dp"
            android:layout_height="48dp"
            android:gravity="top">

            <TextView
                android:id="@+id/tv21"
                style="@style/HoleText"
                android:text="@string/hole_ten" />

            <TextView
                android:id="@+id/tv22"
                style="@style/HoleText"
                android:text="@string/hole_eleven"/>

            <TextView
                android:id="@+id/tv23"
                style="@style/HoleText"
                android:text="@string/hole_twelve" />

            <TextView
                android:id="@+id/tv24"
                style="@style/HoleText"
                android:text="@string/hole_thirteen" />

            <TextView
                android:id="@+id/tv25"
                style="@style/HoleText"
                android:text="@string/hole_fourteen" />

            <TextView
                android:id="@+id/tv26"
                style="@style/HoleText"
                android:text="@string/hole_fifteen" />

            <TextView
                android:id="@+id/tv27"
                style="@style/HoleText"
                android:text="@string/hole_sixteen" />

            <TextView
                android:id="@+id/tv28"
                style="@style/HoleText"
                android:text="@string/hole_seventeen" />

            <TextView
                android:id="@+id/tv29"
                style="@style/HoleText"
                android:text="@string/hole_eighteen" />

            <TextView
                android:id="@+id/tv30"
                android:layout_width="45dp"
                android:background="@drawable/back"
                android:padding="3dip"
                android:text="@string/hole_in"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:textSize="12dp" />

        </TableRow>


        <TableRow
            android:id="@+id/r4"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="top">

            <TextView
                android:id="@+id/tv31"
                style="@style/scorestyle"/>

            <TextView
                android:id="@+id/tv32"
                style="@style/scorestyle"/>

            <TextView
                android:id="@+id/tv33"
                style="@style/scorestyle"/>


            <TextView
                android:id="@+id/tv34"
                style="@style/scorestyle"/>

            <TextView
                android:id="@+id/tv35"
                style="@style/scorestyle"/>

            <TextView
                android:id="@+id/tv36"
                style="@style/scorestyle"/>

            <TextView
                android:id="@+id/tv37"
                style="@style/scorestyle"/>

            <TextView
                android:id="@+id/tv38"
                style="@style/scorestyle"/>

            <TextView
                android:id="@+id/tv39"
                style="@style/scorestyle"/>

            <TextView
                android:id="@+id/tv40"
                style="@style/scorestyle"
                android:text="@string/zero"/>


        </TableRow>

    </TableLayout>


    <TextView
        android:id="@+id/toFront"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="164dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="4dp"
        android:textAlignment="viewStart"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toMiddle" />

    <TextView
        android:id="@+id/toMiddle"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="8dp"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tl1"
        app:layout_constraintVertical_bias="0.497" />

    <TextView
        android:id="@+id/toBack"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="164dp"
        android:layout_marginStart="135dp"
        android:textAlignment="viewStart"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/toMiddle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkSand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="344dp"
        android:buttonTint="@android:color/white"
        android:onClick="SandChecked"
        android:text="@string/sand"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/strokeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nextButton"
        app:layout_constraintVertical_bias="1.0" />

    <CheckBox
        android:id="@+id/checkFairway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="20dp"
        android:buttonTint="@android:color/white"
        android:onClick="FairwayChecked"
        android:text="@string/fairway"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/puttButton"
        app:layout_constraintEnd_toStartOf="@+id/checkSand" />


</android.support.constraint.ConstraintLayout>